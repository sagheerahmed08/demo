{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Digibill",
  "version": "0.1.0",
  "identifier": "Digibill.tauri.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Digibill",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/favicon_io/favicon-16x16.png",
      "icons/favicon_io/apple-touch-icon.png",
      "icons/favicon_io/favicon.ico"
    ]
  }
}
